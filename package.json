{
  "name": "simplyimport",
  "version": "2.1.7",
  "description": "Export-less imports for JS/Coffee files featuring conditional, inline, & minified imports",
  "keywords": [
    "import",
    "importer",
    "jsimport",
    "jsimporter",
    "require",
    "browserify",
    "include",
    "amd",
    "coffee-import"
  ],
  "main": "dist/simplyimport.js",
  "bin": {
    "simplyimport": "./dist/bin"
  },
  "author": "danielkalen",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielkalen/simplyimport"
  },
  "license": "MIT",
  "mocha_opts": "-u tdd --compilers coffee:coffee-script/register --slow 1000 --timeout 3000",
  "scripts": {
    "watch": "nodemon -e coffee -w ./src -x 'npm run compile'",
    "build": "npm run compile && npm run prependbin && npm run makeexec",
    "compile": "npm run compile:module && npm run compile:bin",
    "compile:module": "foreach -g 'src/*' -x 'cat {{path}} | coffee -c -s -b > dist/{{name}}.js'",
    "compile:bin": "coffee -o ./dist -c -b src/cli.coffee",
    "prependbin": "echo '#!/usr/bin/env node' | cat - dist/cli.js > dist/bin && rm -rf dist/cli.js",
    "makeexec": "chmod +x dist/bin",
    "coverage": "istanbul cover --dir test/coverage/node node_modules/mocha/bin/_mocha -- $npm_package_mocha_opts && npm run coverage:badge",
    "coverage:badge": "coffee .config/badge-gen.coffee",
    "test": "fromSrc=true mocha $npm_package_mocha_opts"
  },
  "dependencies": {
    "array-includes": "^3.0.2",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "extend": "^3.0.0",
    "md5": "^2.1.0",
    "mocha": "^2.5.3",
    "uglify-js": "^2.6.1",
    "yargs": "^3.29.0",
    "coffee-script": "^1.10.0"
  },
  "devDependencies": {
    "chai-spies": "^0.7.1",
    "create-output-stream": "0.0.1",
    "foreach-cli": "^1.6.0",
    "fs-extra": "^0.30.0",
    "istanbul": "^0.4.5",
    "lcov-parse": "0.0.10",
    "nodemon": "^1.8.1",
    "request": "^2.74.0",
    "svg2png": "^3.0.1"
  }
}
