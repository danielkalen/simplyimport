{
  "name": "simplyimport",
  "version": "1.2.5",
  "description": "SASS/PHP-like imports with an @import directive supporting conditional imports",
  "keywords": [
    "import",
    "importer",
    "jsimport",
    "jsimporter",
    "require",
    "browserify",
    "include",
    "amd",
    "coffee-import"
  ],
  "main": "simplyimport.js",
  "bin": {
    "simplyimport": "./bin/simplyimport"
  },
  "author": "danielkalen",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielkalen/simplyimport"
  },
  "license": "MIT",
  "scripts": {
    "test": "mocha --ui tdd --compilers coffee:coffee-script/register",
    "watch": "nodemon -e coffee -w ./src -x 'npm run compile'",
    "compile": "npm run compile:js && npm run compile:bin",
    "compile:js": "coffee -o ./ -c src/simplyimport.coffee",
    "compile:bin": "coffee -o ./bin -c src/bin.coffee && npm run prependbin && npm run makeexec",
    "prependbin": "echo '#!/usr/bin/env node' | cat - bin/bin.js > bin/simplyimport && rm -rf bin/bin.js",
    "makeexec": "chmod +x bin/simplyimport",
    "copytopublic": "cp -r ./ ../../sandbox-public/simplyimport"
  },
  "dependencies": {
    "chai": "^3.5.0",
    "fs-extra": "^0.30.0",
    "is-valid-path": "^0.1.1",
    "mocha": "^2.5.3",
    "object-extend": "^0.5.0",
    "uglify-js": "^2.6.1",
    "yargs": "^3.29.0"
  },
  "devDependencies": {
    "coffee-script": "^1.10.0",
    "nodemon": "^1.8.1"
  }
}
